<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="details" label="COM_AUDIOFILES_DETAILS">
        <field name="id" type="number" label="ID" default="0" class="readonly" readonly="true" />
        <field name="title" type="text" label="Title" size="40" required="true" />
        <field name="description" type="textarea" label="Description" rows="5" cols="60" required="true" filter="raw"/>
        <field name="artist_speaker" type="text" label="Artist" required="true" />
        <field name="category" type="list" label="Category" validate="options" >
            <option value="Abundance">Abundance</option>
            <option value="Calm">Calm</option>
            <option value="Communication">Communication</option>
            <option value="Confidence">Confidence</option>
            <option value="Emotions">Emotions</option>
            <option value="Festivals">Festivals</option>
            <option value="Habits">Habits</option>
            <option value="Healing">Healing</option>
            <option value="Karma">Karma</option>
            <option value="Letting go">Letting go</option>
            <option value="Meditation">Meditation</option>
            <option value="Motivation">Motivation</option>
            <option value="Relationship">Relationship</option>
            <option value="Spirituality">Spirituality</option>
            <option value="Values">Values</option>
            <option value="Virtues">Virtues</option>
            <option value="Wisdom">Wisdom</option>
        </field>
        <field name="thumbnail" type="media" label="Thumbnail" types="images"/>
        <field name="audio_file" type="media" label="Audio file" types="audios" />
        <field name="state" type="list" label="JSTATUS" class="form-select-color-state" default="1" validate="options">
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASHED</option>
        </field>
    </fieldset>
</form>