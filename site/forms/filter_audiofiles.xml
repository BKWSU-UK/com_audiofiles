<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field name="search" type="text" label="COM_AUDIOFILES_AUDIOFILES_FILTER_SEARCH_TITLE_LABEL" description="COM_AUDIOFILES_AUDIOFILES_FILTER_SEARCH_TITLE_DESC" class="search-input w-full h-[56px] lg:h-[75px] rounded-15px placeholder-deep-maroon text-24px lg:text-30px px-4 lg:px-8 Montserrat-Medium capitalize" hint="JSEARCH_FILTER" />
        <field name="category" type="list" label="Audio Categories" onchange="this.form.submit();">
            <option value="">Audio Categories</option>
            <option value="Abundance">Abundance</option>
            <option value="Calm">Calm</option>
            <option value="Communication">Communication</option>
            <option value="Confidence">Confidence</option>
            <option value="Emotions">Emotions</option>
            <option value="Festivals">Festivals</option>
            <option value="Habits">Habits</option>
            <option value="Healing">Healing</option>
            <option value="Karma">Karma</option>
            <option value="Letting go">Letting go</option>
            <option value="Meditation">Meditation</option>
            <option value="Motivation">Motivation</option>
            <option value="Relationship">Relationship</option>
            <option value="Spirituality">Spirituality</option>
            <option value="Values">Values</option>
            <option value="Virtues">Virtues</option>
            <option value="Wisdom">Wisdom</option>
        </field>
    </fields>

    <fields name="list">
        <field name="fullordering" type="list" label="JGLOBAL_SORT_BY" default="a.name ASC" onchange="this.form.submit();">
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="a.title ASC">JGLOBAL_TITLE_ASC</option>
            <option value="a.title DESC">JGLOBAL_TITLE_DESC</option>
            <option value="a.id ASC">JGRID_HEADING_ID_ASC</option>
            <option value="a.id DESC">JGRID_HEADING_ID_DESC</option>
        </field>
        <field name="limit" type="limitbox" label="JGLOBAL_LIST_LIMIT" default="25" onchange="this.form.submit();" />
    </fields>
</form>
